---
import BaseLayout from "../layouts/BaseLayout.astro";
import Prose from "../components/Prose.astro";
const pageTitle = "Page Not Found but Ron Burgundy Found You";
---

<BaseLayout title="pageTitle" is404Page={true}>
  <Prose>
    <h1 class="font-overpass-mono text-4xl">
      {pageTitle}
    </h1>
    <h2 class="font-overpass-mono text-2xl italic">
      Or did you find Ron Burgundy?
    </h2>
    <div>
      <h3 id="quote" class="min-h-[250px] flex min-w-0 overflow-auto"></h3>
      <button
        class="bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded"
        onclick="document.getElementById('quote').textContent = getRandomQuote()"
      >
        Generate Random Ron Burgundy Quote
      </button>
      <a
        href="/"
        class="bg-green-500 hover:bg-green-400 text-white font-bold py-2 px-4 border-b-4 border-green-700 hover:border-green-500 rounded inline-block no-underline"
        data-astro-reload
      >
        Go Home
      </a>
    </div>
  </Prose>
</BaseLayout>
<script src="../scripts/burgundy.js"></script>
