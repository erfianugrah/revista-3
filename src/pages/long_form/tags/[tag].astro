---
import { getCollection } from "astro:content";
import BaseLayout from "../../../layouts/BaseLayout.astro";
import BlogPost from "../../../components/BlogPost.astro";
export async function getStaticPaths() {
  const allLongForm = await getCollection("long_form");
  const uniqueTags = [
    ...new Set(allLongForm.map((post) => post.data.tags).flat()),
  ];

  return uniqueTags.map((tag) => {
    const filteredPosts = allLongForm.filter((post) =>
      post.data.tags.includes(tag)
    );
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<BaseLayout pageTitle={tag}>
      {
        posts.map((post) => (
          <BlogPost
            url={`/long_form/${post.slug}/`}
            image={post.data.image ? post.data.image.src : ''}
            title={post.data ? post.data.title : ''}
            description={post.data ? post.data.description: ''}
            }
          />
        ))
      }
</BaseLayout>
