---
import Hamburger from "./Hamburger.astro";
import Navigation from "./Navigation.astro";
import ThemeIcon from "./ThemeIcon.astro";
import { getImage } from 'astro:assets';

const favicon_avif = await getImage({
  src: "https://cdn.erfianugrah.com/ea_favicon.png",
  alt: "favicon",
  width: "400",
  height: "400",
  decoding: "async",
  format: "avif"
});

const favicon_webp = await getImage({
  src: "https://cdn.erfianugrah.com/ea_favicon.png",
  alt: "favicon",
  width: "400",
  height: "400",
  decoding: "async",
  format: "webp"
});
---

<header class="mb-[30px]">
  <nav
    class="flex items-center justify-between w-full h-full relative align-center"
  >
    <div>
      <a href="/">
        <img
          class="favicon absolute left-0 dark:invert -mt-[15px]"
          src={ favicon_avif.src || favicon_webp.src }
          alt="Home"
          width="30px"
          height="30px"
        />
      </a>
    </div>
    <div class="absolute right-[55px] -mb-[5px]">
      <ThemeIcon />
    </div>
    <div class="-mt-[3px]">
      <Hamburger />
    </div>
    <div class="absolute right-0">
      <Navigation />
    </div>
  </nav>
  <slot />
</header>
