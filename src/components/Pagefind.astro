<link href="/pagefind/pagefind-ui.css" rel="stylesheet" />
<script src="/pagefind/pagefind-ui.js" is:inline></script>

<button id="searchButton" class="text-lg pl-[30px] h-[50px]">Search</button>

<dialog id="searchDialog" class="search-dialog">
  <div
    class="dialog-content bg-[rgb(245,245,245)] dark:bg-[rgb(34,33,37)] dark:text-[rgb(245,245,245)] w-[350px] md:w-[700px]"
  >
    <button id="closeButton" class="close" aria-label="Close search">&times;</button>
    <div id="search" class="m-8" transition:persist></div>
  </div>
</dialog>

<script>
  declare class PagefindUI {
    constructor(opts: {
      element: string;
      showSubResults: boolean;
      resetStyles: boolean;
    });
    destroy(): void;
  }

  let pagefindUI: PagefindUI | null = null;

  document.addEventListener("astro:page-load", () => {
    const dialog = document.getElementById("searchDialog") as HTMLDialogElement | null;
    const searchButton = document.getElementById("searchButton");
    const closeButton = document.getElementById("closeButton");

    searchButton?.addEventListener("click", () => {
      dialog?.showModal();
      document.querySelector<HTMLInputElement>("#search input")?.focus();
    });

    closeButton?.addEventListener("click", () => {
      dialog?.close();
    });

    // Close when clicking the backdrop
    dialog?.addEventListener("click", (event) => {
      if (event.target === dialog) {
        dialog.close();
      }
    });

    if (pagefindUI) {
      pagefindUI.destroy();
    }

    pagefindUI = new PagefindUI({
      element: "#search",
      showSubResults: true,
      resetStyles: false,
    });
  });
</script>

<style is:global>
  .search-dialog {
    border: none;
    padding: 0;
    background: transparent;
    max-width: 100vw;
    max-height: 100vh;
    margin: 0;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .search-dialog::backdrop {
    background-color: rgba(0, 0, 0, 0.4);
  }

  .dialog-content {
    margin: 15% auto;
    padding: 20px;
    border: 1px solid #888;
    max-height: 70vh;
    overflow-y: auto;
    border-radius: 20px;
  }

  .close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
    background: none;
    border: none;
    cursor: pointer;
    line-height: 1;
  }

  .close:hover,
  .close:focus {
    color: inherit;
    opacity: 0.7;
    text-decoration: none;
  }

  .dark {
    --pagefind-ui-text: rgb(245, 245, 245) !important;
    --pagefind-ui-primary: rgb(245, 245, 245) !important;
    --pagefind-ui-background: rgb(34, 33, 37) !important;
    --pagefind-ui-border: rgb(245, 245, 245) !important;
    --pagefind-ui-tag: rgb(245, 245, 245) !important;
  }
</style>
