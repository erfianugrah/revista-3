---
const { title, url, image, description } = Astro.props;
import Prose from "./Prose.astro";
import "@fontsource/sarabun";
import "@fontsource-variable/jost";
import "@fontsource-variable/josefin-sans";
---

<div class="flex space-x-4 mb-14">
    <div id="image" class="flex w-1/3 relative h-64">
      <a href={url}>
        <img
          src={image}
          class="absolute inset-0 w-full h-full object-cover object-center"
        />
      </a>
    </div>

  <div id="description "class="w-2/3 items-center flex flex-col">
    <a
      class="prose prose-slate dark:prose-invert uppercase font-josefin no-underline"
      href={url}
    >
      <h3 class="font-josefin">{title}</h3>
      <p class="font-jost normal-case line-clamp-3">{description}</p>
    </a>
  </div>
</div>
<script src="../scripts/hideimage.js"></script>
