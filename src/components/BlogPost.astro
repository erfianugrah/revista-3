---
const { title, url, image, alt, description, pubDate } = Astro.props;
import { Picture } from "astro:assets";
const publishedDate = pubDate
  .toDateString()
  .split(" ")
  .slice(1)
  .join(" ");
---

<div class="flex flex-col sm:flex-row lg:space-x-14 lg:mb-20 sm:mb-14 gap-8 lg:justify-center lg:mx-24" >
{
  image && (
    <div class="flex sm:w-1/3 relative lg:h-[480px] h-[360px]" >
      <a href={url}>
        <Picture
          src={image}
          alt={alt}
          width={2560}
          height={1440}
          decoding="async"
          formats={['avif', 'webp']} 
          loading="lazy" 
          decoding="async"
          class="w-full h-full object-cover object-center g:object-top-33 sm:object-top-50"
        />
      </a>
    </div>
  )
}
  <div id="description " class=" sm:w-2/3 flex flex-col justify-start align-self-center space-y-4 mb-6" >
    <h2 class="font-josefin font-bold text-2xl capitalize " >{title}</h2>
    <p class="font-jost normal-case line-clamp-3 text-base">{description}</p>
    <p class="font-jost text-sm">Published on {publishedDate} </p>   
    <a
      href={url}
      class="prose prose-slate dark:prose-invert space-x-4 no-underline font-jost normal-case mt-8 max-w-max max-h-max flex flex-row items-center flex-shrink-0"
    >
      <p class="text-base fade-effect">See more</p>
      <svg 
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5 mb-[17px] fade-effect"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
      </svg>
    </a>
    <slot />
  </div>
</div>
<style>
.fade-effect {
  transition: opacity 0.5s ease-in-out;
  opacity: 1;
}

.fade-effect:hover {
  opacity: 0.5;
}

.image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

@media (min-width: 1900px) {
  .image {
    object-position: center top 33.33%;
  }
}

@media (min-width: 800px) {
  .image {
    object-position: center top 50%;
  }
}
</style>