---
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
const pageTitle = "Revista";
const { image, description, author, pubDate, updatedDate } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/actualfavicon_o.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="og:title" content={pageTitle} />
    <meta name="og:description" content={description} />
    <meta name="og:image" content={image} />
    <meta name="og:author" content={author} />
    <meta name="og:article:published_time" content={pubDate} />
    <meta name="og:article:modified_time" content={updatedDate} />
    <meta name="og:url" content={Astro.url} />
    <title>{pageTitle}</title>
    <ViewTransitions />
  </head>
  <body>
    <Header />
    <h1 transition:animate="slide">{pageTitle}</h1>
    <slot />
    <Footer />
    <script>
      import "../scripts/menu.js";
    </script>
  </body>
</html>